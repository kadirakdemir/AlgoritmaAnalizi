@model IList<Odev.Web.ViewModels.RandomUserViewModel>
@{
    ViewBag.Title = "Kullanıcılar";
}
<h2>@ViewBag.Title.</h2>
<div class="content">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kullanıcı ID</th>
                <th>İsim</th>
                <th>Telefon</th>
                <th>Kullanıcı İsmi</th>
                <th>Email</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id></td>
                <td>@item.Name </td>
                <td>@item.PhoneNumber</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td><a href="@Url.Action("Delete","Home",new {id=item.Id})" class="btn btn-danger">Sil</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
